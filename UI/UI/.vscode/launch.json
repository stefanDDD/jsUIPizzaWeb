{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Start SQL Server",
      "program": "${workspaceFolder}/src/server/server.js",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Start HTTP Server",
      "program": "${workspaceFolder}/src/server/httpServer.js",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "localhost (Edge)",
      "url": "http://127.0.0.1:5500",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "localhost (Chrome)",
      "url": "http://127.0.0.1:5500",
      "webRoot": "${workspaceFolder}"
    }
  ]
}